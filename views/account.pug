                    .passwordUpdate
                        h3 Mot de passe
                        label(for="password") Ancien Mot de passe
                        input(type="password" class="password" placeholder="********" required)
                        label(for="password") Nouveau Mot de passe
                        input(type="password" class="password" placeholder="********" required)
                        label(for="password") Confirmer le mot de passe
                        input(type="password" class="password" placeholder="********" required)

                        
                .btn
                    input(type="reset" value="Réinitialiser")
                    input(type="submit" value="Créer l'utilisateur")
                    