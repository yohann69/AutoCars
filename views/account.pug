block content 
    main.interface 
        h2 Mon compte
        section 
            form.myaccount
                section 
                    .personalData 
                        h3 Informations personnelles
                        label(for="fname") Prénom
                        input(type="text" class="fname" placeholder="François" value=`${user.fname}` required)
                        label(for="fname") Nom
                        input(type="text" class="lname" placeholder="Duchemin" value=`${user.lname}` required)
